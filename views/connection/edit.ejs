<%- include('partials/header.ejs')%>
    <h1 class="header">Edit Connection</h1>
    <div class="login">
            <div class="loginText">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="newConnection.ejs">Add a Connection</a>
